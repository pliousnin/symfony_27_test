{% extends 'base.html.twig' %}

{% block body %}
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Images/armenia_aragats_hayk_2-wallpaper-2880x1800.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Images/beautiful_lion_3-wallpaper-2880x1800.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Images/road_landscape_aesthetic_black_and_white-wallpaper-2880x1800.jpg" class="d-block w-100" alt="...">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="jumbotron">
        <h1 class="display-4">Hello, world!</h1>
        <div class="row">
            {% for product in products %}
                <div class="col-3 margin__tb__16">
                    <a href="product/{{ product.id }}">
                        <img src="{{ product.image }}" class="max__width__100">
                        {{ product.name }}
                    </a>

                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style></style>
{% endblock %}
